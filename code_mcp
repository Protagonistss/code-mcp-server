#!/usr/bin/env python3
"""
MCP服务器启动脚本
简化启动方式：uv run python code_mcp.py
"""

import sys
import os

# 添加src目录到Python路径
src_path = os.path.join(os.path.dirname(__file__), 'src')
sys.path.insert(0, src_path)

# 导入并运行主模块
if __name__ == "__main__":
    from code_mcp.__main__ import main
    import asyncio
    asyncio.run(main())